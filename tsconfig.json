{
  "compilerOptions": {
    "module": "CommonJS",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "target": "ES2020"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
